<!doctype html>
<html>
<head>
  <title>MTG {{format_name}}</title>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/keyrune@latest/css/keyrune.css" rel="stylesheet" type="text/css" />

  <style type="text/css">
    body {
      font-size: large;
      margin: 0;
      padding: 0 1rem;
      color: rgba(0,0,0,0.9);
    }
    .page-wrapper {
      max-width: 28rem;
      margin: 0 auto;
      padding: 1em 0 3em 0;
    }
    h1, h2, h3, h4 {
      margin-top: 1rem;
      margin-bottom: 0;
    }
    p, ul{
      margin-bottom: 0;
    }
    p {
      margin-top: 1rem;
    }
    ul {
      margin-top: 0.3rem;
      padding-left: 1.5rem;
    }
    li {
      margin-top: 0.2rem;
      list-style: none;
      text-indent: -0.6rem;
    }
    .icon-list {
        padding-left: 2.75rem;
    }
    .icon-list li {
      text-indent: -1.85rem;
    }
    li > * {
      text-indent: initial;
    }
    li::before {
      content: "\b7";
      margin-right: 0.3rem;
    }
    a {
      color: inherit;
    }
    sup {
      vertical-align: baseline;
      position: relative;
      top: -0.4rem;
    }
    .icon-list .ss {
      display: inline-block;
      width: 1em;
      text-align: center;
    }
    .ss.ss-none::before {
      content: "";
    }
    .no-wrap {
      display:inline-block;
    }
    .header-section {
      text-align: center;
    }
    .fill-line-wrapper {
      white-space: nowrap;
      overflow: hidden;
    }
    .fill-line-wrapper h3 {
      display: inline-block;
    }
    .fill-line {
      display: inline-block;
      width: 100%;
      height: 1px;
      background-color: rgba(0,0,0,0.8);
      margin-left: 0.15em;
    }
    .footer {
      margin-top: 2em;
      text-align: center;
      color: rgba(0,0,0,0.5);
    }
    .column-container {
      margin-top: 1rem;
    }
    .brawl-header {
      display: inline-block;
      max-width: 28rem;
    }

    @media screen and (min-width: 48rem) {
      .page-wrapper {
        max-width: 46rem;
      }
      .column-container {
        margin-top: 2rem;
        display: flex;
      }
      .column-section {
        padding-left: 1rem;
        padding-right: 1rem;
        flex-basis: 1px;
        flex-grow: 1;
        flex-shrink: 0;
      }
      .column-section:first-child {
        margin-left: -1rem;
      }
      .column-section:last-child {
        margin-right: -1rem;
      }
      .column-section .fill-line-wrapper {
        text-align: center;
      }
      .column-section h3 {
        margin-top: 0;
      }
      .column-section .fill-line {
        display: none;
      }
    }
  </style>

</head>
<body>
<div class="page-wrapper">

  <div class="header-section">
    <p {{#is_brawl}}class="brawl-header"{{/is_brawl}}>
